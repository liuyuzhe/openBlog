<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.strongliu.blog.dao.TagDao">

    <resultMap id="tagResultMap" type="Tag">
        <id property="id" column="tag_id"/>
        <id property="name" column="tag_name"/>
        <id property="create_time" column="tag_create_time"/>
        <id property="post_id" column="post_id"/>
    </resultMap>

    <select id="selectById" resultMap="tagResultMap">
        SELECT id, tag_name FROM tag_table
        WHERE id=#{id}
    </select>

    <select id="selectAllTagByPostId" resultMap="tagResultMap">
        SELECT id, tag_name FROM tag_table
        WHERE post_id=#{postId}
    </select>

</mapper>